---
const { artist } = Astro.props;
---

<a href={`/artists/${artist.slug}`} class="artist-card-link">
    <div class="artist-card glow-card">
        <div class="artist-avatar">
            <img
                src={artist.data.image || "/logo.jpg"}
                alt={`Photo of Pandit ${artist.data.name}`}
                width="100"
                height="100"
                loading="lazy"
                decoding="async"
            />
        </div>
        <div class="artist-info">
            <h3 class="artist-name">{artist.data.name}</h3>
            <p class="artist-desc">{artist.data.bio.substring(0, 80)}...</p>
        </div>
        <div class="card-footer">
            <span class="learn-more">Learn More â†’</span>
        </div>
    </div>
</a>

<style>
    .artist-card-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .artist-card {
        background: var(--glass-fill);
        border: 1px solid var(--glass-border);
        padding: 24px 20px;
        border-radius: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 16px;
        transition:
            transform 0.3s ease,
            background 0.3s ease;
        backdrop-filter: blur(10px);
        height: 100%;
    }

    .artist-card:hover {
        transform: translateY(-8px);
        background: rgba(255, 255, 255, 0.05);
    }

    .artist-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        overflow: hidden;
        border: 2px solid var(--accent-color);
        box-shadow: 0 4px 15px rgba(255, 45, 85, 0.3);
    }

    .artist-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .artist-name {
        font-size: 20px;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0;
    }

    .artist-desc {
        font-size: 14px;
        color: var(--text-secondary);
        line-height: 1.5;
        margin: 0;
    }

    .card-footer {
        margin-top: auto;
    }

    .learn-more {
        font-size: 14px;
        font-weight: 600;
        color: var(--accent-color);
    }
</style>
