---
import { userStart } from "../lib/authStore";
---

<header class="glass-header">
  <div class="nav-container">
    <a href="/" class="logo">
      <img
        src="/logo.jpg"
        alt="Logo"
        class="logo-icon"
        width="40"
        height="40"
      />
      Swaramanjusha
    </a>

    <!-- Hamburger Button -->
    <button class="menu-toggle" id="menu-toggle" aria-label="Toggle Menu">
      <div class="bar"></div>
      <div class="bar"></div>
      <div class="bar"></div>
    </button>

    <!-- Desktop Nav -->
    <nav class="nav-links desktop-nav">
      <a href="/" class="nav-link">Home</a>
      <a href="/artists" class="nav-link">Artists</a>
      <a href="#" class="nav-link">About Us</a>
      <div id="auth-container-desktop" style="display:contents">
        <!-- Placeholder for JS injection -->
        <li id="auth-link-desktop" style="list-style: none;">
          <a href="/login" class="nav-link nav-btn">Login / Signup</a>
        </li>
      </div>
    </nav>
  </div>

  <!-- Mobile Nav Drawer -->
  <div class="mobile-nav" id="mobile-nav">
    <div class="mobile-nav-content">
      <a href="/" class="mobile-link">Home</a>
      <a href="/artists" class="mobile-link">Artists</a>
      <a href="#" class="mobile-link">About Us</a>
      <div id="auth-container-mobile" style="margin-top: 20px;">
        <div id="auth-link-mobile">
          <a href="/login" class="nav-btn mobile-btn">Login / Signup</a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  import { userStart } from "../lib/authStore";

  // Auth Logic
  const authLinkDesktop = document.getElementById("auth-link-desktop");
  const authLinkMobile = document.getElementById("auth-link-mobile");

  userStart.subscribe((user) => {
    if (user === null) return;

    // Update Desktop
    if (authLinkDesktop) {
      if (user) {
        authLinkDesktop.innerHTML = `<a href="/profile" class="nav-link nav-btn profile-btn" style="display: flex; align-items: center; gap: 8px;">
                <svg style="width:18px;height:18px;" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                </svg>
                Profile
            </a>`;
      } else {
        authLinkDesktop.innerHTML = `<a href="/login" class="nav-link nav-btn">Login / Signup</a>`;
      }
    }

    // Update Mobile
    if (authLinkMobile) {
      if (user) {
        authLinkMobile.innerHTML = `<a href="/profile" class="nav-btn mobile-btn profile-btn" style="display: inline-flex; align-items: center; gap: 8px; justify-content: center; width: 100%;">
                <svg style="width:18px;height:18px;" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                </svg>
                Profile
            </a>`;
      } else {
        authLinkMobile.innerHTML = `<a href="/login" class="nav-btn mobile-btn" style="display: block; text-align: center;">Login / Signup</a>`;
      }
    }
  });

  // Mobile Menu Logic
  const menuToggle = document.getElementById("menu-toggle");
  const mobileNav = document.getElementById("mobile-nav");
  const body = document.body;

  menuToggle?.addEventListener("click", () => {
    menuToggle.classList.toggle("active");
    mobileNav?.classList.toggle("active");

    if (mobileNav?.classList.contains("active")) {
      body.style.overflow = "hidden";
    } else {
      body.style.overflow = "";
    }
  });

  // Close menu on link click
  document.querySelectorAll(".mobile-link").forEach((link) => {
    link.addEventListener("click", () => {
      menuToggle?.classList.remove("active");
      mobileNav?.classList.remove("active");
      body.style.overflow = "";
    });
  });
</script>

<style>
  .glass-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 80px;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    background: var(--header-bg);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid var(--glass-border);
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1200px;
    padding: 0 40px;
  }

  .logo {
    font-family: "Dancing Script", cursive;
    font-size: 32px;
    font-weight: 700;
    color: var(--text-primary);
    text-decoration: none;
    display: flex;
    align-items: center;
    z-index: 1002; /* Above mobile menu */
  }

  .logo-icon {
    height: 40px;
    width: auto;
    margin-right: 12px;
    border-radius: 8px;
    object-fit: cover;
  }

  /* Desktop Nav */
  .desktop-nav {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .nav-link {
    text-decoration: none;
    color: var(--nav-link-color);
    font-size: 15px;
    font-weight: 500;
    opacity: 0.8;
    transition: opacity 0.2s ease;
    cursor: pointer;
    position: relative;
  }

  .nav-link:hover {
    opacity: 1;
  }

  .nav-btn {
    padding: 10px 28px;
    background: linear-gradient(135deg, var(--accent-color), #ff4757);
    color: white !important;
    border-radius: 99px;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 0.5px;
    opacity: 1;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 15px rgba(255, 45, 85, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.2);
    position: relative;
    overflow: hidden;
  }

  .nav-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 45, 85, 0.5);
  }

  .profile-btn {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Hamburger Menu Button */
  .menu-toggle {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1002;
  }

  .bar {
    width: 25px;
    height: 2px;
    background-color: white;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  /* Mobile Nav Drawer */
  .mobile-nav {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    height: 100vh;
    background: rgba(10, 10, 15, 0.98);
    backdrop-filter: blur(20px);
    z-index: 1001;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .mobile-nav.active {
    right: 0;
  }

  .mobile-nav-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    width: 100%;
    padding: 0 20px;
  }

  .mobile-link {
    font-size: 24px;
    font-weight: 600;
    color: white;
    text-decoration: none;
    opacity: 0.8;
    transition: opacity 0.2s;
  }

  .mobile-link:hover {
    opacity: 1;
    color: var(--accent-color);
  }

  .mobile-btn {
    font-size: 18px;
    padding: 12px 40px;
    width: 100%;
    display: block;
  }

  /* Hamburger Animation */
  .menu-toggle.active .bar:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .menu-toggle.active .bar:nth-child(2) {
    opacity: 0;
  }

  .menu-toggle.active .bar:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  @media (max-width: 768px) {
    .desktop-nav {
      display: none;
    }
    .menu-toggle {
      display: flex;
    }
    .nav-container {
      padding: 0 20px;
    }
  }
</style>
