<div id="music-player" class="music-player glass" style="display: none;">
    <div class="player-container">
        <div class="track-info">
            <div class="track-img">
                <img src="/logo.jpg" alt="Logo" id="player-img" />
            </div>
            <div class="track-text">
                <div class="track-title" id="player-title">Track Title</div>
                <div class="track-artist" id="player-artist">Artist Name</div>
            </div>
        </div>

        <div class="player-controls">
            <div class="main-controls">
                <button class="ctrl-btn" id="prev-btn">
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <path d="M6 6h2v12H6zm3.5 6l8.5 6V6z"></path>
                    </svg>
                </button>
                <button class="ctrl-btn play-pause-btn" id="player-play-btn">
                    <svg
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        id="play-icon"
                    >
                        <path d="M8 5v14l11-7z"></path>
                    </svg>
                    <svg
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        id="pause-icon"
                        style="display: none;"
                    >
                        <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"></path>
                    </svg>
                </button>
                <button class="ctrl-btn" id="next-btn">
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <path d="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z"></path>
                    </svg>
                </button>
            </div>
            <div class="progress-container">
                <span id="current-time">0:00</span>
                <div class="progress-bar" id="progress-bar-bg">
                    <div class="progress-fill" id="progress-fill"></div>
                </div>
                <span id="total-time">0:00</span>
            </div>
        </div>

        <div class="volume-controls">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path
                    d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"
                ></path>
            </svg>
            <input
                type="range"
                id="volume-slider"
                min="0"
                max="100"
                value="80"
            />
        </div>
    </div>
</div>

<audio id="main-audio"></audio>

<script>
    import {
        isPlaying,
        currentTrack,
        volume,
        togglePlay,
    } from "../lib/playerStore";

    const player = document.getElementById("music-player");
    const audio = document.getElementById("main-audio") as HTMLAudioElement;
    const playBtn = document.getElementById("player-play-btn");
    const playIcon = document.getElementById("play-icon");
    const pauseIcon = document.getElementById("pause-icon");
    const titleEl = document.getElementById("player-title");
    const artistEl = document.getElementById("player-artist");
    const progressFill = document.getElementById("progress-fill");
    const progressBarBg = document.getElementById("progress-bar-bg");
    const currentTimeEl = document.getElementById("current-time");
    const totalTimeEl = document.getElementById("total-time");
    const volumeSlider = document.getElementById(
        "volume-slider",
    ) as HTMLInputElement;

    currentTrack.subscribe((track) => {
        if (track && player && audio && titleEl && artistEl) {
            player.style.display = "block";
            titleEl.textContent = track.title;
            artistEl.textContent = track.artist;
            if (audio.src !== track.url) {
                audio.src = track.url;
                audio.play();
            }
        }
    });

    isPlaying.subscribe((playing) => {
        if (audio) {
            if (playing) {
                audio.play().catch(() => {});
                if (playIcon) playIcon.style.display = "none";
                if (pauseIcon) pauseIcon.style.display = "block";
            } else {
                audio.pause();
                if (playIcon) playIcon.style.display = "block";
                if (pauseIcon) pauseIcon.style.display = "none";
            }
        }
    });

    playBtn?.addEventListener("click", () => {
        togglePlay();
    });

    audio?.addEventListener("timeupdate", () => {
        if (audio.duration) {
            const progress = (audio.currentTime / audio.duration) * 100;
            if (progressFill) progressFill.style.width = `${progress}%`;

            if (currentTimeEl)
                currentTimeEl.textContent = formatTime(audio.currentTime);
            if (totalTimeEl)
                totalTimeEl.textContent = formatTime(audio.duration);
        }
    });

    progressBarBg?.addEventListener("click", (e) => {
        if (audio) {
            const rect = progressBarBg.getBoundingClientRect();
            const pos = (e.clientX - rect.left) / rect.width;
            audio.currentTime = pos * audio.duration;
        }
    });

    volumeSlider?.addEventListener("input", () => {
        if (audio) {
            const val = parseInt(volumeSlider.value) / 100;
            audio.volume = val;
            volume.set(val);
        }
    });

    function formatTime(seconds: number) {
        const min = Math.floor(seconds / 60);
        const sec = Math.floor(seconds % 60);
        return `${min}:${sec.toString().padStart(2, "0")}`;
    }
</script>

<style>
    .music-player {
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        width: 90%;
        max-width: 1100px;
        height: 90px;
        z-index: 2000;
        background: var(--header-bg);
        backdrop-filter: blur(30px) saturate(200%);
        -webkit-backdrop-filter: blur(30px) saturate(200%);
        border: 1px solid var(--glass-border);
        border-radius: 45px;
        padding: 0 30px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
    }

    .player-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 100%;
        gap: 40px;
    }

    .track-info {
        display: flex;
        align-items: center;
        gap: 15px;
        width: 250px;
    }

    .track-img {
        width: 54px;
        height: 54px;
        border-radius: 12px;
        overflow: hidden;
        background: var(--blob-1);
    }

    .track-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .track-text {
        overflow: hidden;
    }

    .track-title {
        font-weight: 700;
        font-size: 15px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .track-artist {
        font-size: 13px;
        color: var(--text-secondary);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .player-controls {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
    }

    .main-controls {
        display: flex;
        align-items: center;
        gap: 24px;
    }

    .ctrl-btn {
        background: none;
        border: none;
        color: var(--text-primary);
        cursor: pointer;
        opacity: 0.8;
        transition:
            opacity 0.2s,
            transform 0.2s;
    }

    .ctrl-btn:hover {
        opacity: 1;
        transform: scale(1.1);
    }

    .play-pause-btn {
        width: 48px;
        height: 48px;
        background: white;
        color: black;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 1;
    }

    .progress-container {
        display: flex;
        align-items: center;
        gap: 12px;
        width: 100%;
        max-width: 500px;
    }

    .progress-container span {
        font-size: 11px;
        color: var(--text-secondary);
        width: 35px;
    }

    .progress-bar {
        flex: 1;
        height: 4px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 2px;
        cursor: pointer;
        position: relative;
    }

    .progress-fill {
        height: 100%;
        background: var(--accent-color);
        border-radius: 2px;
        width: 0%;
        position: relative;
    }

    .progress-fill::after {
        content: "";
        position: absolute;
        right: -6px;
        top: -4px;
        width: 12px;
        height: 12px;
        background: white;
        border-radius: 50%;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        opacity: 0;
        transition: opacity 0.2s;
    }

    .progress-bar:hover .progress-fill::after {
        opacity: 1;
    }

    .volume-controls {
        display: flex;
        align-items: center;
        gap: 10px;
        width: 150px;
        color: var(--text-secondary);
    }

    input[type="range"] {
        flex: 1;
        height: 4px;
        accent-color: var(--text-primary);
        cursor: pointer;
    }

    @media (max-width: 900px) {
        .volume-controls {
            display: none;
        }
    }

    @media (max-width: 768px) {
        .track-info {
            width: auto;
        }
        .track-text {
            display: none;
        }
        .progress-container {
            max-width: 200px;
        }
    }
</style>
